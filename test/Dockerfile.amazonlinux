# Test Dockerfile for Amazon Linux 2023 environment
# This simulates an EC2 Amazon Linux instance for testing dotfiles setup

FROM amazonlinux:2023

# Install minimal dependencies
RUN yum update -y && \
    yum install -y \
    git \
    curl \
    sudo \
    xz \
    tar \
    gzip \
    ca-certificates \
    shadow-utils \
    && yum clean all

# Create test user (simulating EC2 ec2-user)
RUN useradd -m -s /bin/bash ec2-user && \
    echo "ec2-user ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Switch to test user
USER ec2-user
WORKDIR /home/ec2-user

# Copy dotfiles to container
COPY --chown=ec2-user:ec2-user . /home/ec2-user/.dotfiles

# Run bootstrap script
RUN cd /home/ec2-user/.dotfiles && \
    bash remote-bootstrap.sh

# Verify installation
RUN bash -c 'source /nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh && \
    which git && \
    which tmux && \
    which nvim && \
    which fzf'

CMD ["/bin/bash"]
